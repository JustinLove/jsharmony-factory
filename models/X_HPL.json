{
  "X_HPL": {
    "title":"Help Targets",
    "dev":1,
    "table":"jsharmony.hp",
    "actions":"BIUD", 
    "caption":[0,"Help Target","Help Targets"],
    "layout":"grid", 
    "sort":[{"hp_desc":"asc"}], 
    "menu":"X_HPL",
    "reselectafteredit": "row",    "comment1":"row, or blank",
    "newrowposition": "first",      "comment2":"first or last",
    "commitlevel": "row",          "comment3":"cell, row, page, or none",
    "validationlevel": "row",     "comment4":"cell, or row",
    "fields":[
      {"name":"hp_id","type":"bigint","key":1,"control":"hidden"},
      {"name":"hp_code","type":"varchar","length":50,"actions": "BIU","control": "textbox_L",
       "caption":"Code",
       "popuplov": {"target":  "X_MODELS", "{{code_val}}": "model_id", "popupstyle": "height:400px;width:770px;",
          "onpopup": "jsh.App[popupmodelid].ShowUserModels(popupmodelid, parentmodelid, fieldid, onComplete);",
          "popupiconstyle":"position:relative;top:5px;"}},
      {"name":"hp_desc","type":"varchar","length":"50","validate":["Required","MaxLength:50"],"actions":"BIU",
       "control":"textbox_L", "caption":"Name"}
    ],
    "oninit":"jsh.$root('.xtbl.xelem'+xmodel.class).before('<div>** Help Targets should reference the Base Model (without Model Parents), unless a custom model.helpid is used</div>');",
    "dberrors": [
      [ "hp_hp_code_key", "Duplicate Help Target Code" ],
      [ "hp_hp_desc_key", "Duplicate Help Target Name" ],
      [ "h_hp_code_fkey", "Cannot delete. This Help Target already referred by Help Module" ]
    ]
  }    
}