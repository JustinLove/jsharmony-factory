{
  "UCOD2_HL": {
    "title":"System 2-Dimensional Code Tables",
    "dev":1,
    "table":"jsharmony.ucod2_h",
    "actions":"B",
    "layout":"grid", 
	"caption":[0,"System Code2 Table","System Code2 Tables"],
    "roles": {"X_B":"B","DADMIN":"*"},
    "sort":["^codename","^codeschema"], 
	"menu":"X_UCOD2_HL",
    "reselectafteredit": "row",    "comment1":"row, or blank",
    "newrowposition": "first",      "comment2":"first or last",
    "commitlevel": "row",          "comment3":"cell, row, page, or none",
    "validationlevel": "row",     "comment4":"cell, or row",
	"fields":[
      {"name":"ucod2_h_id","type":"bigint","key":1,"control":"hidden"},
      {"name":"click","type":"varchar","length":"128","validate":["Required"],
       "sqlselect":"(case jsharmony.table_type(codeschema,{{concat}}('ucod2_',codename)) when 'BASE TABLE' then 'U' else NULL end)",
       "caption":"","actions":"B","control": "html",
       "value": "<a href='UCOD2L?codename=<%=data['codename']%>&codeschema=<%=data['codeschema']%>'><%=data['click']%></a>"},
      {"name":"codeschema","type":"varchar","length":"16","actions":"B","caption":"Schema"},
	  {"name":"codename","type":"varchar","length":"16","control": "html", 
       "caption":"Code2 Table Name","actions":"B","controlstyle":"width:120px;","validate":["Required"],
       "value": "<a href='UCOD2L?codename=<%=data['codename']%>&codeschema=<%=data['codeschema']%>'><%=data['codename']%></a>"},
	  {"name":"codemean","type":"varchar","length":"128","validate":["Required"],
       "caption":"Table Description","actions":"B","controlstyle":"width:260px;","control": "html", 
       "value": "<a href='UCOD2L?codename=<%=data['codename']%>&codeschema=<%=data['codeschema']%>'><%=data['codemean']%></a>"},
	  {"name":"codecodemean","type":"varchar","length":"128",
       "caption":"Code","actions":"B","controlstyle":"width:160px;"},
      {"name":"codeattribmean","type":"varchar","length":"128",
       "caption":"Attribute","actions":"B","controlstyle":"width:160px;"},
      {"name":"my_create","type":"varchar","length":"128","cellstyle":"text-align:center;",
       "sqlselect":"(case jsharmony.table_type(codeschema,{{concat}}('ucod2_',codename)) when 'BASE TABLE' then NULL else 'CREATE' end)",
       "link":"update:POPUP_EXEC_CREATE_UCOD2&codeschema=codeschema&codename=codename&codemean=codemean",
       "caption":"Create Table","actions":""},
      {"name":"click2","type":"varchar","length":"128","validate":["Required"],
       "sqlselect":"(case jsharmony.table_type(codeschema,{{concat}}('ucod2_',codename)) when 'BASE TABLE' then 'U' else NULL end)",
       "caption":"Edit Codes","actions":"B","control": "html","cellstyle": "text-align:center;",
       "value": "<a href='UCOD2L?codename=<%=data['codename']%>&codeschema=<%=data['codeschema']%>'><% if(data['click2']){ %><img src='/images/icon_update.png' height='14' style='position:relative;top:2px;' /><% } %></a>"}
	]
  },	
  "X_UCOD2_HL": {
    "inherits":"UCOD2_HL",
    "dev":1,
    "actions":"BIUD",
    "fields":[
      {"name":"codeschema","actions": "BI","control": "textbox"},
      {"name":"codename","actions": "BI","control": "textbox","value":"__REMOVEPROPERTY__"},
      {"name":"codemean","actions": "BIU","control": "textbox","value":"__REMOVEPROPERTY__"},
      {"name":"codecodemean","actions": "BIU","control": "textbox"},
      {"name":"codeattribmean","actions": "BIU","control": "textbox"},
      {"name":"my_create","actions": "B"}
    ],
    "dberrors": [
      [ "UNQ_UCOD2_H", "Duplicate Key (Schema + Code Table Name)" ],
      [ "ucod2_h_codeschema_codename_key", "Duplicate Key (Schema + Code Table Name)" ]
    ]  
  }
}
