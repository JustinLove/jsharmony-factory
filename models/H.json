{
  "H": {
	  "title":"Help Screen",
	  "table":"jsharmony.h",
	  "actions":"BIUD", 
    "layout":"form", 
    "caption": [ "", "Help Screen", "Help Screens" ],
    "menu":"HL",
    "breadcrumbs": { "parents": ["HL"] },
	  "fields":[
      {"name":"h_id","type":"bigint","key":1,"control":"hidden"},

      {"name":"hp_id","type":"bigint","actions":"BIU","control":"hidden"},
      
      {"name":"hp_desc","type":"varchar","length":50,"actions":"B",
        "sqlselect":"(select hp_desc from jsharmony.hp where jsharmony.hp.hp_id = jsharmony.h.hp_id)",
        "control":"textbox_L","validate":["Required"],
        "caption":"Help Target","captionstyle":"width:120px;text-align:right;"},
      {"name":"hp_code_select_target","unbound":true,"control":"hidden",
        "popuplov": {"target":  "HELP_TARGETS", "codeval": "hp_code", "popupstyle": "height:400px;width:770px;",
          "popup_copy_results": { "hp_code": "hp_code", "hp_id": "hp_id", "hp_desc": "hp_desc" },
          "popupiconstyle":"position:relative;top:5px;"},
      },
      {"name":"hp_code","type":"varchar","length":50,"actions":"BIU","readonly":true,"nl":1,
        "control":"textbox_L",
        "caption":"Model","captionstyle":"width:120px;text-align:right;"},
      {"name":"hp_code_select_model","unbound":true,"control":"hidden",
        "popuplov": {"target":  "X_MODELS", "codeval": "model_id", "popupstyle": "height:400px;width:770px;",
          "onpopup": "if(xmodel.get('hp_id')){ return XExt.Alert('Please clear Help Target before selecting a different model.'); } jsh.App[popupmodelid].ShowUserModels(popupmodelid, parentmodelid, fieldid, onComplete);",
          "popup_copy_results": { "hp_code": "model_id" },
          "popupiconstyle":"position:relative;top:5px;"}
      },

      {"name":"h_seq","type":"int","actions":"BIU","control":"textbox_VS","nl":1,
       "caption":"Sequence","captionstyle":"width:120px;text-align:right;"},

      {"name":"h_index_a","type":"boolean","actions":"BIU","control":"checkbox",
       "controlparams":{"value_true":"true","value_false":"false"},"caption":"Main System","default":"1",
       "captionstyle":"width:120px;text-align:right;"},

      {"name":"h_index_p","type":"boolean","actions":"BIU","control":"checkbox",
       "controlparams":{"value_true":"true","value_false":"false"},"caption":"Client Portal","default":"1",
       "captionstyle":"width:120px;text-align:right;"},

       {"name":"h_title","type":"varchar","length":70,"actions":"BIU","control":"textbox_VL","nl":1,
        "validate":["Required"],"caption":"Title"},

	    {"name":"h_text","type":"varchar","length":99999,"actions":"BIU","nl":1,
	     "control":"htmlarea","controlstyle":"width:590px;height:400px;","sample":"Here goes the text ...........",
		   "caption":"Body","captionstyle":"width:120px;height:400px;vertical-align:top;padding-top:3px;text-align:right;",
			 "validate":["Required"]},
	    {"name":"h_etstmp","type":"datetime","length":7,"actions":"B","nl":1,
	     "control":"textbox_tstmp",
		    "caption":"Entered"},
      {"name":"h_eu_fmt","type":"varchar","length":20,"actions":"B",
          "sqlselect":"(jsharmony.mycuser_fmt(h_eu))",
          "control":"textbox","controlstyle":"width:158px;","caption":""},
	    {"name":"h_mtstmp","type":"datetime","length":7,"actions":"B","nl":1,
	      "control":"textbox_tstmp",
		    "caption":"Last Updated"},
      {"name":"h_mu_fmt","type":"varchar","length":20,"actions":"B",
          "sqlselect":"(jsharmony.mycuser_fmt(h_mu))",
          "control":"textbox","controlstyle":"width:158px;","caption":"","eol":1}
	],
	"dberrors":[
    ["unq_h_h_unique","This Help Target has already been defined."],
    ["unq_h_h_title","The Help Target with the same title has already been defined."],
    ["h_hp_code_unique","This Help Target has already been defined."],
    ["h_h_title_key","The Help Target with the same title has already been defined."]
	]
  }
}