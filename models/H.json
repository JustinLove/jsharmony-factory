{
  "H": {
	  "title":"Help Module",
	  "table":"jsharmony.h",
	  "actions":"BIUD", 
    "layout":"form", 
    "caption": [ "", "Help Module", "Help Modules" ],
    "menu":"ADMINISTRATION_HELPMAINTENANCE",
    "breadcrumbs": { "parents": ["HL"] },
    "onload": "XExt.CKEditor('h_text');",
	  "fields":[
      {"control":"html","value":"<script type='text/javascript' src='/js/ckeditor/ckeditor.js'></script>"},
	    {"name":"h_id","type":"bigint","key":1,"control":"hidden"},
	    {"name":"h_title","type":"varchar","length":70,"actions":"BIU","control":"textbox_VL",
	     "validate":["Required"],"caption":"Module Title","captionstyle":"width:120px;text-align:right;"},
		  
      {"name":"h_seq","type":"int","actions":"BIU","control":"textbox_VS","nl":1,
       "caption":"Sequence","captionstyle":"width:120px;text-align:right;"},

      {"name":"h_index_a","type":"boolean","actions":"BIU","control":"checkbox",
       "controlparams":{"value_true":"true","value_false":"false"},"caption":"Main System Help Index","default":"1",
       "captionstyle":"width:120px;text-align:right;"},

      {"name":"h_index_p","type":"boolean","actions":"BIU","control":"checkbox",
       "controlparams":{"value_true":"true","value_false":"false"},"caption":"Portal Help Index","default":"1",
       "captionstyle":"width:120px;text-align:right;"},
		  
		  
	    {"name":"hp_code","type":"varchar","length":50,"actions":"BI","nl":1,
	     "control":"dropdown_VL","sample":"Test - General","lov":{"sql":"select hp_code as %%%jsh.map.codeval%%%,hp_desc as %%%jsh.map.codetxt%%% from jsharmony.HP order by hp_desc","blank":""},
		   "caption":"Panel"},
	    {"name":"h_text","type":"varchar","length":99999,"actions":"BIU","nl":1,
	     "control":"textarea","controlstyle":"width:590px;height:400px;","sample":"Here goes the text ...........",
		   "caption":"Body","captionstyle":"width:120px;height:400px;vertical-align:top;padding-top:3px;text-align:right;",
			 "validate":["Required"]},
	    {"name":"h_etstmp","type":"datetime","length":7,"actions":"B","nl":1,
	     "control":"textbox_tstmp",
		    "caption":"Entered"},
      {"name":"h_eu_fmt","type":"varchar","length":20,"actions":"B",
          "sqlselect":"(jsharmony.mycuser_fmt(h_eu))",
          "control":"textbox","controlstyle":"width:158px;","caption":""},
	    {"name":"h_mtstmp","type":"datetime","length":7,"actions":"B","nl":1,
	      "control":"textbox_tstmp",
		    "caption":"Last Updated"},
      {"name":"h_mu_fmt","type":"varchar","length":20,"actions":"B",
          "sqlselect":"(jsharmony.mycuser_fmt(h_mu))",
          "control":"textbox","controlstyle":"width:158px;","caption":"","eol":1}
	],
	"dberrors":[
    ["UNQ_H_H_UNIQUE","This Help Panel has already been defined."],
    ["UNQ_H_H_Title","The Help Panel with the same title has already been defined."],
    ["h_hp_code_unique","This Help Panel has already been defined."],
    ["h_h_title_key","The Help Panel with the same title has already been defined."]
	]
