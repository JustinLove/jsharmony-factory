{
  "X_SMLW": {
    "dev":1,
    "layout":"form", 
    "title":"Menu Items",
    "table":"",
    "actions":"B", 
    "caption":[0,"Menu Item","Menu Items"],
    "sqlselect": "X_SMLW_TOP",
    "querystring": { "|action": "update", "|cur_sm_id_auto": "0" },
    "buttons": [{"link":"X_SML&", "icon": "list", "text": "List View", "actions": "B" }],
    "menu":"DEV_X_SML",
    "hide_system_buttons" : ["print","export"], 
    "fields":[
	  { "control": "html", "value": "<div class=\"clear\" style=\"padding-bottom:15px;width:1000px;\"></div>" },
      {"name": "cur_sm_id_auto", "type": "bigint", "key": 1, "control":"hidden" },
      {"name": "sm_id_auto","actions": "B","caption": "","control": "tree","unbound":true,"always_editable":true,
       "controlstyle": "display:inline-block;margin-right:10px;height:400px;width:300px;",
       "lov": { "sql": "X_SMLW_LOV" },
       "controlparams": {
          "expand_all": true,
          "item_context_menu": [
            { "icon": "insert", "text": "Add Child Item", "command": "jsh.App.X_SMLW.item_insert(context_item);", "actions": "IUD", "class": "insert" },
            { "icon": "delete", "text": "Delete", "command": "jsh.App.X_SMLW.item_delete(context_item);", "actions": "IUD", "class": "delete" }
          ]
        },
        "onchange": "jsh.App.X_SMLW.sm_id_onchange(obj,newval);"
      },
      {
        "name": "X_SML_EDIT",
        "control": "subform",
        "controlstyle": "width:450px;display:inline-block;",
        "target": "X_SML_EDIT",
        "bindings": { "sm_id_auto": "sm_id_auto" },
        "caption": "",
        "actions": "BIUD"
      }
	  ],
    "oninit": "jsh.App.X_SMLW.oninit();"
  },
  "X_SMLW_INSERT": {
      "layout": "exec",
      "title": "Add Menu Item",
      "actions": "U",
      "dev": 1,
      "sqlexec": "X_SMLW_INSERT",
      "sqlexec_comment":"Be sure to add %%%DATALOCKS%%% if applicable",
      "popup":[450,250],
      "fields": [
        {"name":"sm_id_parent","type":"bigint","actions":"U","control":"hidden"},
        {"name":"sm_name","type":"varchar","length": 30,"actions":"U","control":"hidden"},
        {"name":"sm_desc","type":"varchar","length": 255,"actions":"U","control":"hidden"}
      ]
  },
  "X_SMLW_DELETE": {
      "layout": "exec",
      "title": "Delete Menu Item",
      "actions": "U",
      "dev": 1,
      "sqlexec": ["delete from jsharmony.SM where sm_id_auto=@sm_id_auto"],
      "sqlexec_comment":"Be sure to add %%%DATALOCKS%%% if applicable",
      "popup":[450,250],
      "fields": [
        {"name":"sm_id_auto","type":"bigint","actions":"U","control":"hidden"}
      ]
  }
}